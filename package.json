{
  "name": "billpay-frontend",
  "private": true,
  "version": "1.0.0",
  "description": "Billpay monorepo (frontend + backend)",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
    "build": "pnpm --filter './*' run build",
    "lint": "pnpm --filter './*' run lint"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
